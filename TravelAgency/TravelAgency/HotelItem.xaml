<UserControl x:Class="TravelAgency.HotelItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TravelAgency"
             mc:Ignorable="d" d:DesignWidth="800" Height="24">
    <Grid Height="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Viewbox Grid.Column="0">
            <Label x:Name="TitleLabel" Content="Название" />
        </Viewbox>
        <Viewbox Grid.Column="1">
            <Label x:Name="StarsLabel" Content="Количество звезд" />
        </Viewbox>
        <Viewbox x:Name="CountyLabel" Grid.Column="2">
            <Label Content="Cтрана" />
        </Viewbox>
        <Viewbox Grid.Column="3">
            <Label Content="Количество туров" />
        </Viewbox>
        
    </Grid>
</UserControl>
