<Page x:Class="TravelAgency.HotelsTable"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TravelAgency"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HotelsTable">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Width="4*"/>
                <DataGridTextColumn Header="Количество звезд" Width="2*"/>
                <DataGridTextColumn Header="Страна" Width="4*"/>
                <DataGridTextColumn Header="Количество туров" Width="2*"/>
                <DataGridTextColumn Width="1*"/>
               
            </DataGrid.Columns>
            <Button/>

        </DataGrid>
        
    </Grid>
</Page>
